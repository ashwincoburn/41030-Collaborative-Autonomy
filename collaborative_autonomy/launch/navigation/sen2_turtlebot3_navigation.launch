<launch>
  <!-- Arguments (of this launch file) -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="first_tb3_x_pos" default="-2.0"/>
  <arg name="first_tb3_y_pos" default=" -0.5"/>
  <arg name="second_tb3_x_pos" default=" 2.0"/>
  <arg name="second_tb3_y_pos" default=" 0.5"/>

  <!-- Turtlebot3 -->
  <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
    <arg name="model" value="$(arg model)" />
  </include>

  <!-- Map server -->
  <!--<node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/> -->

  <!-- AMCL & move_base LEADER -->
  <group ns="tb3_leader">
    <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
      <arg name="scan_topic" value="/tb3_leader/scan"/>
      <arg name="initial_pose_x" value="$(arg first_tb3_x_pos)"/>
      <arg name="initial_pose_y" value="$(arg first_tb3_y_pos)"/>
    </include>
    <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="cmd_vel_topic" value="/tb3_leader/cmd_vel" />
      <arg name="odom_topic" value="/tb3_leader/odom" />
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <!-- AMCL & move_base CHASER -->
  <group ns="tb3_chaser">
    <include file="$(find turtlebot3_navigation)/launch/amcl.launch">
      <arg name="scan_topic" value="/tb3_chaser/scan"/>
      <arg name="initial_pose_x" value="$(arg second_tb3_x_pos)"/>
      <arg name="initial_pose_y" value="$(arg second_tb3_y_pos)"/>
    </include>
    <include file="$(find turtlebot3_navigation)/launch/move_base.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="cmd_vel_topic" value="/tb3_chaser/cmd_vel" />
      <arg name="odom_topic" value="/tb3_chaser/odom" />
      <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    </include>
  </group>

  <!-- Rviz moved to senario2.launch file -->
  
</launch>
